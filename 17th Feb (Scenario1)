import java.util.ArrayList;

class Book {
    String title;
    String author;
    String isbn;

    Book(String title, String author, String isbn) {
        this.title = title;
        this.author = author;
        this.isbn = isbn;
    }

    void displayBook() {
        System.out.println("Title: " + title);
        System.out.println("Author: " + author);
        System.out.println("ISBN: " + isbn);
    }
}

class Library {
    ArrayList<Book> books = new ArrayList<>();

    void addBook(Book book) {
        books.add(book);
    }

    Book searchByTitle(String title) {
        for (Book b : books) {
            if (b.title.equalsIgnoreCase(title)) {
                return b;
            }
        }
        return null;
    }

    void displayAllBooks() {
        for (Book b : books) {
            b.displayBook();
        }
    }
}

public class Main {
    public static void main(String[] args) {

        Library library = new Library();

        Book b1 = new Book("Java Basics", "Ali Khan", "1111");
        Book b2 = new Book("OOP Concepts", "Sara Ahmed", "2222");
        Book b3 = new Book("Data Structures", "Ahmed Raza", "3333");

        library.addBook(b1);
        library.addBook(b2);
        library.addBook(b3);

        System.out.println("All Books in Library:");
        library.displayAllBooks();

        System.out.println("Searching for 'OOP Concepts'...");
        Book found = library.searchByTitle("OOP Concepts");

        if (found != null) {
            System.out.println("Book Found:");
            found.displayBook();
        } else {
            System.out.println("Book Not Found!");
        }
    }
}
